<Window x:Class="WpfGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LT Amp GUI" Height="450" Width="600">
    <Grid>
        <!-- Define 3 rows, the second row is for the button, and the third for the output -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TextBox row -->
            <RowDefinition Height="Auto"/>
            <!-- Button row -->
            <RowDefinition Height="*"/>
            <!-- TextBlock row, fills remaining space -->
        </Grid.RowDefinitions>

        <!-- Command input text box -->
        <TextBox x:Name="CommandInput" Width="300" Height="30" Margin="10" Grid.Row="0" HorizontalAlignment="Left"/>

        <!-- Run command button -->
        <Button Content="Run Command" Width="100" Height="30" Margin="10"
                Grid.Row="1" HorizontalAlignment="Center" Click="Button_Click"/>

        <!-- Output text block -->
        <TextBlock x:Name="OutputText" Width="350" Margin="125,10,125,10" 
                   TextWrapping="Wrap" Grid.Row="2"/>
    </Grid>
</Window>